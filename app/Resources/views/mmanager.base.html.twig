<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}SUNO Management{% endblock %}</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/base.main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block navigation %}
            <div class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">SUNO MManager</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/modemlist/">Список модемов</a></li>
                            <li><a href="/modemgroupslist/">Список групп</a></li>
                            <li><a href="/messagelist/">Список сообщений</a></li>
                            <li><a href="/schedulelist/">Расписания</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
              </div>
        {% endblock %}
        <div class="container-fluid">
            <div class="col-sm-3 col-md-2 sidebar">
                {% block sidebar %}{% endblock %}
            </div>
            <div class="col-sm-9 col-md-10 main">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div id="footer">
            <div class="container" style="text-align: center;">
                {% block footer %}
                {% endblock %}
                    <p class="text-muted">Powered by Symfony. Developer: Artyom Belov.</p>
            </div>
        </div>
        <script href="{{ asset('js/bootstrap.min.js')}}" src=""></script>
        <script href="{{ asset('js/jquery.min.js')}}" src=""></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>