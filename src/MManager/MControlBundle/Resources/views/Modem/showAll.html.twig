
{% extends 'MManagerMControlBundle::layout.html.twig' %}

{% block stylesheets %} 
    {{ parent() }} 
    <link href="{{ asset('bundles/modemmanager/css/modemmanager.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %}Modems list{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>id</th>
                <th>Serial Number</th>
                <th>Phone Number</th>
                <th>Location</th>
                <th>Current Status</th>
                <th>Last time updated</th>
                <th>Tools</th>
            </tr>
        </thead>
        <tbody id="modems">
            {% for modem in modems %}
                <tr>
                    <td><input type="checkbox"></td>
                    <td>{{ modem.getModemId }}</td>
                    <td>{{ modem.getModemSerial }}</td>
                    <td>{{ modem.getModemPhone }}</td>
                    <td>{{ modem.getModemLocation }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor%}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Main</h3>
        </div>
        <div class="panel-body">
            <div class="btn btn-default" id="addnewmodem">Add New Modem</div>
        </div>
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Group</h3>
        </div>
        <div class="panel-body">
            <div class="btn btn-default primary addmodem">Switch Group</div>
        </div>
    </div>
{% endblock %}